datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Internship {
    id          String    @id @default(cuid())
    start       DateTime
    end         DateTime?
    title1      String
    title2      String?
    description String
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
}

model Education {
    id          String    @id @default(cuid())
    start       DateTime
    end         DateTime?
    title1      String
    title2      String?
    description String
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
}

model Project {
    id                  String        @id @default(cuid())
    title               String
    image               String
    category            String
    description         String
    detailedDescription String
    technologies        String[]
    codeSnippets        CodeSnippet[]
    liveUrl             String
    repoUrl             String
    createdAt           DateTime      @default(now())
    updatedAt           DateTime      @updatedAt
}

model CodeSnippet {
    id        String   @id @default(cuid())
    title     String
    repo      String
    filePath  String
    branch    String?  @default("main")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    Project   Project? @relation(fields: [projectId], references: [id])
    projectId String?
}
